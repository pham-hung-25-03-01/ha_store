<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:background="@color/white"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cart_item_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cate_1"
        app:shapeAppearanceOverlay="@style/border_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cart_item_img"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="SET BO DO BA LO THOI TRANG SAKURA MS123"
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/cart_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_review"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:padding="2dp"
            android:text="Size: XL"
            android:textColor="#9D9B9B"
            android:textSize="10sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15.000 đ"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/cart_item_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="Số lượng: 13"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>